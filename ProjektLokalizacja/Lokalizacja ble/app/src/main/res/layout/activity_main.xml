<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.lokalizacja.MainActivity">

    <Button
        android:id="@+id/skan"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:padding="15dp"
        android:text="skanuj"
        android:textSize="20sp" />

    <Button
        android:id="@+id/ble"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/skan"
        android:layout_marginTop="43dp"
        android:textSize="18sp"
        android:padding="15dp"
        android:text="ble on/off" />

    <Button
        android:id="@+id/button"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ble"
        android:layout_marginTop="46dp"
        android:textSize="18sp"
        android:padding="15dp"
        android:text="Lokalizacja on/off" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button"
        android:layout_marginTop="86dp"
        android:text="UWAGA: Do poprawnego dzialania aplikacji niezbedny jest dostep do lokalizacji urzadzenia i bluetooth low energy" />

</RelativeLayout>
